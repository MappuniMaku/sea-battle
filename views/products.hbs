<h2>Список продуктов</h2>

{{#if results.length}}
    <ul class="ProductsList">
        {{#each results}}
            <li class="ProductsList__item">
                <span class="ProductsList__itemText">Позиция: {{id}}, наименование: {{name}}, цена: {{price}}</span>

                <form action="/db_query/products/remove" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-small">
                        Удалить
                    </button>
                </form>
            </li>
        {{/each}}
    </ul>
{{else}}
    <span>В базе нет никаких продуктов</span>
{{/if}}

<form action="/db_query/products/add" method="POST">
    <div class="input-field">
        <input type="text" name="name">
        <label>Наименование</label>
    </div>

    <div class="input-field">
        <input type="number" name="price">
        <label>Цена</label>
    </div>

    <button type="submit" class="btn btn-small">
        Удалить
    </button>
</form>
